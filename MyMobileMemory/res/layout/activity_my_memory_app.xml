<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a"
    android:orientation="horizontal" >

    <Button
        android1:id="@+id/buttonToCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/button_addTask" />

    <ListView
        android1:id="@+id/listView_new"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:layout_alignParentRight="true"
        android1:layout_below="@+id/buttonToCreate"
        android1:layout_marginTop="42dp" 
        android1:layout_marginLeft="40dp"
        android1:layout_marginRight="30dp"
        android1:layout_marginBottom="42dp">
    </ListView>

</RelativeLayout>